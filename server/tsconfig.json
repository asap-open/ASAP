{
  "compilerOptions": {
    "rootDirs": ["src", "generated"],
    "outDir": "./dist",
    "module": "nodenext",
    "target": "ES2023",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["./generated/prisma/client.js"]
    },
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    "sourceMap": true,
    "declaration": true
  },
  "include": ["src", "generated"],
  "exclude": ["node_modules", "dist"]
}
